<Window x:Class="Lab04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab04"
        mc:Ignorable="d"
        Title="Text Changer" Height="400" Width="400">
    <Grid Margin="8,8,8,8">
        <TextBox x:Name="txtBox1" HorizontalAlignment="Left" Height="114" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" FontFamily="Times New Roman" FontSize="14"/>
        <TextBox x:Name="txtBox2" HorizontalAlignment="Left" Height="112" Margin="10,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" FontFamily="Times New Roman" FontSize="14"/>
        <Button  x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="226,283,0,0" VerticalAlignment="Top" Width="120" Height="43" FontFamily="Times New Roman" FontSize="16" Click="btnExit_Click"/>
        <Button  x:Name="btnChange" Content="Change" HorizontalAlignment="Left" Margin="35,283,0,0" VerticalAlignment="Top" Width="127" Height="43" FontFamily="Times New Roman" FontSize="16" Click="btnChange_Click"/>

    </Grid>
</Window>
